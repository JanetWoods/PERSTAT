@model IEnumerable<PERSTAT.Models.Assignment>

@{
    ViewData["Title"] = "GetAssignmentsByStatus";
}

    <h1>All Assignments in this status</h1>

            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.People)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mission)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateStart)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateEnd)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.People.NameFirst)
                            @Html.DisplayFor(modelItem => item.People.NameLast)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mission.MissionTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.LocationCity), @Html.DisplayFor(modelItem => item.Location.State.StateShort)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.People.Status.StatusName)
                        </td>
                        <td>
             
                            <a asp-action="Details" asp-route-id="@item.AssignmentId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.AssignmentId">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
