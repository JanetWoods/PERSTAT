@model IEnumerable<PERSTAT.Models.Assignment>

@{
    ViewData["Title"] = "Index";
}

<h1>All Current Assignments</h1>

<p>
    <a asp-action="Create" asp-controller="Assignment" >Add an assignment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.People)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="GetAssignmentsByPerson" asp-controller="Assignment" asp-route-id="@item.PeopleId">
                    @Html.DisplayFor(modelItem => item.People.NameFirst)
                    @Html.DisplayFor(modelItem => item.People.NameLast)
                </a>
            </td>
            <th>
                <a asp-action="GetAssignmentsByStatus" asp-controller="Assignment" asp-route-id="@item.People.StatusId">
                    @Html.DisplayFor(model => item.People.Status.StatusName)
                </a>
            </th>

            <td>
                <a asp-action="GetPeopleByMission" asp-controller="Assignment" asp-route-id="@item.MissionId">
                    @Html.DisplayFor(modelItem => item.Mission.MissionTitle)
                </a>
            </td>
            <td>
                <a asp-action="GetPeopleByLocation" asp-controller="Assignment" asp-route-id="@item.LocationId">
                    @Html.DisplayFor(modelItem => item.Location.LocationCity),
                    @Html.DisplayFor(modelItem => item.Location.LocationDetail)
                    </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
            <td>
            <a asp-action="Delete" asp-route-id="@item.AssignmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
